# ============================================
# Database Configuration
# ============================================
# Set USE_WINDOWS_AUTH=true for Windows Authentication (Windows only)
# Set USE_WINDOWS_AUTH=false for SQL Authentication (cross-platform)

USE_WINDOWS_AUTH=true

# SQL Server Connection
DB_SERVER=your_server_name
DB_DATABASE=your_database_name
DB_PORT=1433

# SQL Authentication (only needed if USE_WINDOWS_AUTH=false)
DB_USER=your_username
DB_PASSWORD=your_password

# ODBC Driver (for Windows Authentication only)
# Options: "ODBC Driver 18 for SQL Server", "ODBC Driver 17 for SQL Server", "SQL Server"
ODBC_DRIVER=ODBC Driver 18 for SQL Server

# Connection Options
DB_ENCRYPT=true
DB_TRUST_SERVER_CERTIFICATE=true

# ============================================
# Server Configuration
# ============================================
PORT=5000
NODE_ENV=development

# ============================================
# Upload Configuration
# ============================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.xlsx,.xls

# ============================================
# IMPORTANT NOTES:
# ============================================
# 1. Each user's Windows account must have access to the SQL Server database
# 2. SQL Server must be configured to allow Windows Authentication
# 3. No passwords are stored - Windows handles authentication automatically
# 4. When a user runs the app, it connects as their Windows user
# ============================================
